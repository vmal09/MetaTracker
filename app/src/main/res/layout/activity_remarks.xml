<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/wp"
        android:padding="30dp"
        tools:context=".Remarks">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@color/trans"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardBackgroundColor="#597E57C2"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/trans"
                android:orientation="vertical"
                android:padding="15dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#F1EDED"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/origintech"
                            android:text="Plan :"
                            android:textAlignment="center"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/editTextPlanName"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/raleway"
                            android:hint="Event"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLength="100"
                            android:textAlignment="textStart"
                            android:textSize="20sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:cardBackgroundColor="#F1EDED"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/origintech"
                            android:padding="10dp"
                            android:text="Event"
                            android:textSize="20sp" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <Spinner
                    android:id="@+id/spinner3"
                    android:layout_width="190dp"
                    android:layout_height="39dp"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="-37dp"
                    android:background="@drawable/button_type"
                    android:fontFamily="@font/origintech"
                    android:minHeight="50dp"
                    android:popupBackground="@color/purple_200"
                    android:popupElevation="@dimen/cardview_compat_inset_shadow"
                    tools:ignore="SpeakableTextPresentCheck" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:cardBackgroundColor="#F1EDED"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:popupBackground="@color/purple_200">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/origintech"
                            android:text="Date :"
                            android:textAlignment="center"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/date3"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/raleway"
                            android:hint="dd/mm/yyyy"
                            android:imeOptions="actionNext"
                            android:inputType="date"
                            android:maxLength="10"
                            android:textAlignment="textStart"
                            android:textSize="24sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:cardBackgroundColor="#F1EDED"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/origintech"
                            android:text="time :"
                            android:textAlignment="center"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/editTextEventTime"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/raleway"
                            android:hint="hh:mm"
                            android:imeOptions="actionNext"
                            android:inputType="time"
                            android:maxLength="10"
                            android:textAlignment="textStart"
                            android:textSize="24dp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#597E57C2"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/trans"
                android:orientation="vertical"
                android:padding="13dp">


                <EditText
                    android:id="@+id/editTextRemarks"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="2.5dp"
                    android:layout_marginRight="1dp"
                    android:background="@drawable/remarks_textarea"
                    android:fontFamily="@font/raleway"
                    android:inputType="textMultiLine"
                    android:letterSpacing="0.1"
                    android:lines="10"
                    android:maxLines="10"
                    android:minLines="5"
                    android:padding="10dp"
                    android:scrollbars="vertical"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="15.5sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#D4BBFF"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/trans"
                android:orientation="vertical"
                android:padding="5dp">


                <android.widget.Button
                    android:id="@+id/buttonViewEvent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonbackground"
                    android:fontFamily="@font/origintech"
                    android:letterSpacing="0.1"
                    android:onClick="submit"
                    android:text="ok"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="#80D8FF"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@color/trans"
                android:orientation="vertical"
                android:padding="5dp">

                <android.widget.Button
                    android:id="@+id/buttonViewEventList"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_info"
                    android:fontFamily="@font/origintech"
                    android:letterSpacing="0.1"
                    android:onClick="submit"
                    android:text="Plans"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-57dp"
            app:cardBackgroundColor="#8C9EFF"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/trans"
                android:orientation="vertical"
                android:padding="5dp">

                <android.widget.Button
                    android:id="@+id/buttonMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/menu_button"
                    android:fontFamily="@font/origintech"
                    android:gravity="center"
                    android:letterSpacing="0.1"
                    android:text="Menu"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

    </RelativeLayout>
