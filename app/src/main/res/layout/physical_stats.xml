<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wp"
    android:padding="30dp"
    tools:context=".PhysicalStats">

    <RelativeLayout
        android:id="@+id/centerhorizontalline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/centerverticalline"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@id/centerverticalline"
        android:background="@drawable/buttonbackground"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#F1EDED"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">


                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:fontFamily="@font/origintech"
                    android:gravity="center"
                    android:letterSpacing="0.1"
                    android:text="Body Mass"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold">

                </TextView>

                <EditText
                    android:id="@+id/weightKg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/origintech"
                    android:gravity="center_horizontal"
                    android:hint="kg"
                    android:inputType="numberSigned|numberDecimal"
                    android:lines="1"
                    android:maxWidth="100dp"
                    android:maxLines="1"
                    android:textAlignment="center"
                    android:textSize="35sp"
                    tools:text="20.2">

                </EditText>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="-165dp"
        android:layout_marginBottom="100dp"
        android:layout_toStartOf="@id/centerverticalline"
        android:background="@drawable/buttonbackground"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#F1EDED"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">


                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:fontFamily="@font/origintech"
                    android:gravity="center"
                    android:letterSpacing="0.1"
                    android:text="Sleep\nDuration"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold">

                </TextView>

                <EditText
                    android:id="@+id/SleepD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/origintech"
                    android:gravity="center_horizontal"
                    android:hint="hrs"
                    android:inputType="numberSigned|numberDecimal"
                    android:lines="1"
                    android:maxWidth="100dp"
                    android:maxLength="4"
                    android:maxLines="1"
                    android:textAlignment="center"
                    android:textSize="35sp"
                    tools:text="8" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@id/centerverticalline"
        android:background="@drawable/buttonbackground"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#F1EDED"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">


                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:fontFamily="@font/origintech"
                    android:gravity="center"
                    android:letterSpacing="0.1"
                    android:text="Calories Intake"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold">

                </TextView>

                <EditText
                    android:id="@+id/CalorieIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/origintech"
                    android:gravity="center_horizontal"
                    android:hint="cal"
                    android:inputType="numberSigned|numberDecimal"
                    android:lines="1"
                    android:maxWidth="100dp"
                    android:maxLines="1"
                    android:textAlignment="center"
                    android:textSize="35sp"
                    tools:text="20.2">

                </EditText>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:layout_marginEnd="-165dp"
        android:layout_toStartOf="@id/centerverticalline"
        android:background="@drawable/buttonbackground"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#F1EDED"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">


                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:fontFamily="@font/origintech"
                    android:gravity="center"
                    android:letterSpacing="0.1"
                    android:text="Exercise Span"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold">

                </TextView>

                <EditText
                    android:id="@+id/ExSpan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/origintech"
                    android:gravity="center_horizontal"
                    android:hint="mins"
                    android:inputType="numberSigned|numberDecimal"
                    android:lines="1"
                    android:maxWidth="100dp"
                    android:maxLines="1"
                    android:textAlignment="center"
                    android:textSize="35sp"
                    tools:text="20.2">

                </EditText>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="376dp"
        app:cardBackgroundColor="#597E57C2"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/trans"
            android:orientation="horizontal"
            android:padding="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#F1EDED"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/origintech"
                        android:text="Date :"
                        android:textAlignment="center"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/vdate"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/raleway"
                        android:hint="dd/mm/yyyy"
                        android:imeOptions="actionNext"
                        android:inputType="date"
                        android:maxLength="10"
                        android:textAlignment="center"
                        android:textSize="20sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>





    <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="451dp"
    app:cardBackgroundColor="#D4BBFF"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/trans"
        android:orientation="vertical"
        android:padding="5dp">


        <android.widget.Button
            android:id="@+id/butt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonbackground"
            android:fontFamily="@font/origintech"
            android:letterSpacing="0.1"
            android:onClick="submit"
            android:text="ok"
            android:textStyle="bold">

        </android.widget.Button>

    </LinearLayout>

</androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_marginTop="531dp"
        android:layout_marginLeft="180dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#80D8FF"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/trans"
            android:orientation="vertical"
            android:padding="5dp">


            <android.widget.Button
                android:id="@+id/buttonCheckStatHistory"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_info"
                android:fontFamily="@font/origintech"
                android:letterSpacing="0.1"
                android:text="Stats"
                android:textStyle="bold">

            </android.widget.Button>


        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_marginTop="531dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#82B1FF"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/trans"
            android:orientation="vertical"
            android:padding="5dp">

            <android.widget.Button
                android:id="@+id/buttonMenu"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:background="@drawable/menu_button"
                android:fontFamily="@font/origintech"
                android:letterSpacing="0.1"
                android:text="Menu"
                android:textStyle="bold">

            </android.widget.Button>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>